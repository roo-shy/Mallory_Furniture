<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Product View</title>
  </head>
  <body>
    <nav>
    <li>
      <a href="http://localhost:3000/">
        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
      </a>
    </li>
    <li>
      <a href="http://localhost:3000/products/">
        <span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span>
      </a>
    </li>
  </nav>
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <%= image_tag "#{@product.img_file}.jpg", class: "img-responsive"%>
      </div>
      <div class="col-md-4">
        <div class="item_box">
          <h2><%= @product.item %></h2>
        </div>
        <div class="price_box">
          <h3>Price</h3>
        </div>
        <p>$<% if @product.condition.to_s == "good" %>
          <%= @product.discount %>
          <span class="highlight">
            <b>Clearance Price</b>
          </span>
          <% elsif @product.condition.to_s == "average" %>
          <%= @product.discount %>
        <span class=Clearance Price</b></span>
      <% else %>
        <%= @product.price %>
        <% end %>
      </p>

      <div class="description_box">
        <h3>Description</h3>
      </div>
      <p><%= @product.description%></p>
      <div class="dimensions_box">
        <h3>Dimensions</h3>
      </div>
      <p>Width:
        <%= @product.dimension_w%></p>
      <p>Length:
        <%= @product.dimension_l%></p>
      <p>Height:
        <%= @product.dimension_h%></p>
    </div>
  </div>
</body>
</html>
